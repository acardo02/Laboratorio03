<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05608755" />

    <TextView
        android:id="@+id/title_text_view"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/money_amount_text"
        android:textColor="@color/black"
        android:textSize="@dimen/cash_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />


    <TextView
        android:id="@+id/cash_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_gap"
        android:text="@string/cash_text"
        android:textColor="@color/black"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text_view" />

    <ImageView
        android:id="@+id/five_cents_image_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/medium_gap"
        app:layout_constraintEnd_toStartOf="@+id/ten_cents_view_image"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cash_text_view"
        app:srcCompat="@drawable/five_cents" />

    <ImageView
        android:id="@+id/ten_cents_view_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/medium_gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/five_cents_image_view"
        app:layout_constraintTop_toBottomOf="@+id/cash_text_view"
        app:srcCompat="@drawable/ten_cents" />

    <TextView
        android:id="@+id/five_cents_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_gap"
        android:text="@string/five_cents_text"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/five_cents_image_view"
        app:layout_constraintStart_toStartOf="@+id/five_cents_image_view"
        app:layout_constraintTop_toBottomOf="@+id/five_cents_image_view" />

    <TextView
        android:id="@+id/ten_cents_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_gap"
        android:text="@string/ten_cents_text"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/ten_cents_view_image"
        app:layout_constraintStart_toStartOf="@+id/ten_cents_view_image"
        app:layout_constraintTop_toBottomOf="@+id/ten_cents_view_image" />

    <ImageView
        android:id="@+id/twenty_five_cents_image_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/medium_gap"
        app:layout_constraintEnd_toEndOf="@+id/five_cents_image_view"
        app:layout_constraintStart_toStartOf="@+id/five_cents_image_view"
        app:layout_constraintTop_toBottomOf="@+id/five_cents_text_view"
        app:srcCompat="@drawable/quarter" />

    <TextView
        android:id="@+id/twenty_five_cents_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_gap"
        android:text="@string/twenty_cents_text"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/twenty_five_cents_image_view"
        app:layout_constraintStart_toStartOf="@+id/twenty_five_cents_image_view"
        app:layout_constraintTop_toBottomOf="@+id/twenty_five_cents_image_view" />

    <ImageView
        android:id="@+id/one_dollar_image_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/medium_gap"
        app:layout_constraintEnd_toEndOf="@+id/ten_cents_view_image"
        app:layout_constraintStart_toStartOf="@+id/ten_cents_view_image"
        app:layout_constraintTop_toBottomOf="@+id/ten_cents_text_view"
        app:srcCompat="@drawable/one_dollar" />

    <TextView
        android:id="@+id/one_dollar_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_gap"
        android:text="@string/dollar_text"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/one_dollar_image_view"
        app:layout_constraintStart_toStartOf="@+id/one_dollar_image_view"
        app:layout_constraintTop_toBottomOf="@+id/one_dollar_image_view" />


</androidx.constraintlayout.widget.ConstraintLayout>